#%%
import matplotlib.pyplot as plt

def leader_rounds(n):
    if n == 1:
        return 1
    return 1 + leader_rounds(n // 2) # i think this is wrong>???? how exactly does the leader election process work??

def compute_L(n_max):
    L = [leader_rounds(n) for n in range(2, n_max+1)]
    plt.figure()
    plt.plot(range(2, n_max+1), L, marker='o')
    plt.xlabel('n')
    plt.ylabel('L(n)')
    plt.title('Average Rounds to Elect Leader')
    plt.show()